<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/purple_dark"
    android:padding="@dimen/margin_medium"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/home_adapter_bottom_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_help_center"
            android:textColor="@color/teal"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/za_organizatore_koncerata"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/text_last_item_description"
            android:layout_marginTop="@dimen/margin_medium"
            android:textColor="@color/purple_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="64dp"
            android:text="@string/button_show_more"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:paddingStart="@dimen/margin_medium"
            android:paddingEnd="@dimen/margin_medium" />
    </LinearLayout>

</FrameLayout>